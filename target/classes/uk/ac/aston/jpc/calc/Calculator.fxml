<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="4.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="txtOperand" />
      <HBox alignment="CENTER" spacing="4.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#plusPressed" text="+" />
            <Button mnemonicParsing="false" onAction="#minusPressed" text="-" />
            <Button mnemonicParsing="false" onAction="#timesPressed" text="*" />
            <Button mnemonicParsing="false" onAction="#dividePressed" text="/" />
            <Button mnemonicParsing="false" onAction="#setPressed" text="Set" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label fx:id="resultLabel" text="Result: 0" textAlignment="CENTER" />
   </children>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</VBox>
